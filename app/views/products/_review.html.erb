<section class="review">
    <% user = User.find review.user_id %>
   <% rating = review.rating %>
   <span class="review-rating">
     <% (1..5).each do |num| %>
       <% if num <= rating %>
         <span class="glyphicon glyphicon-star"></span>
       <% else %>
         <span class="glyphicon glyphicon-star-empty"></span>
       <% end %>
     <% end %>
   </span>
   <span class="review-info"><%= user.first_name %> <%= user.last_name%> at <%= review.created_at %></span>
   <span class="review-description"><%= review.description%></span>
   <span class="review-delete"><% if current_user == user %>
   <%= link_to 'Delete', product_review_path(review.product_id, review.id), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-primary' %>
   <% end %></span>
 </section>
