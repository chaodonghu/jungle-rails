<header class="page-header">
  <h1>Login</h1>
</header>

<div class="jumbotron">
  <%= form_tag '/login' do %>
    <div class="field">
      Email:<br>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      Password:<br>
      <%= password_field_tag :password %>
    </div>
    <br>
    <%= submit_tag "Submit" %>

  <% end %>
</div>
